// Bot uses the same schema as the API
// This file is a symlink reference - the actual schema is in ../api/prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  discordId String?  @unique
  avatar    String?
  email        String?  @unique
  passwordHash String?
  username  String
  isAdmin   Boolean  @default(false)
  isOwner   Boolean  @default(false)
  isBanned  Boolean  @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  key                 Key?
  checkpointProgress  CheckpointProgress[]
  auditLogs           AuditLog[]
  sessions            Session[]
}

model Key {
  id        String    @id @default(uuid())
  key       String    @unique
  userId    String?   @unique
  hwidHash  String?
  isActive  Boolean   @default(true)
  expiresAt DateTime?
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  discordId         String?   @unique
  hwidResetCount    Int       @default(0)
  hwidResetWindowStart DateTime?
  lastHwidReset     DateTime?
  totalHwidResets   Int       @default(0)
  totalExecutions   Int       @default(0)
  lastExecutor      String?
  lastPlaceId       BigInt?
  lastUsedAt        DateTime?
  activatedAt       DateTime?
  user User? @relation(fields: [userId], references: [id], onDelete: Cascade)
  @@index([key])
  @@index([hwidHash])
  @@index([discordId])
}

model Checkpoint {
  id        String   @id @default(uuid())
  order     Int
  platform  String
  url       String
  name      String?
  enabled   Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  progress CheckpointProgress[]
  @@unique([order])
}

model CheckpointProgress {
  id           String   @id @default(uuid())
  userId       String
  checkpointId String
  completedAt  DateTime @default(now())
  token        String?
  user       User       @relation(fields: [userId], references: [id], onDelete: Cascade)
  checkpoint Checkpoint @relation(fields: [checkpointId], references: [id], onDelete: Cascade)
  @@unique([userId, checkpointId])
}

model GameScript {
  id        String   @id @default(uuid())
  name      String
  placeId   BigInt
  gameId    BigInt?
  content   String
  enabled   Boolean  @default(true)
  paused    Boolean  @default(false)
  version   String   @default("1.0.0")
  iconUrl   String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  maintenance        Boolean  @default(false)
  maintenanceMessage String?
  @@unique([placeId])
  @@index([placeId])
}

model Session {
  id        String   @id @default(uuid())
  userId    String
  token     String   @unique
  expiresAt DateTime
  createdAt DateTime @default(now())
  ipAddress String?
  userAgent String?
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  @@index([token])
  @@index([userId])
}

model ScriptToken {
  id        String   @id @default(uuid())
  token     String   @unique
  keyId     String
  placeId   BigInt
  expiresAt DateTime
  used      Boolean  @default(false)
  createdAt DateTime @default(now())
  @@index([token])
}

model AuditLog {
  id        String   @id @default(uuid())
  userId    String?
  event     String
  details   String?
  ipAddress String?
  userAgent String?
  success   Boolean  @default(true)
  createdAt DateTime @default(now())
  user User? @relation(fields: [userId], references: [id], onDelete: SetNull)
  @@index([event])
  @@index([userId])
  @@index([createdAt])
}

model SystemSettings {
  id                    String  @id @default("default")
  hubName               String  @default("Wisper Hub")
  hubDescription        String?
  checkpointsRequired   Int     @default(0)
  maxHwidResets         Int     @default(3)
  keyExpirationDays     Int?
  keyActivationHours    Int     @default(6)
  maintenanceMode       Boolean @default(false)
  maintenanceMessage    String?
  loaderVersion         String  @default("1.0.0")
}
