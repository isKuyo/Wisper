// Wisper Hub Database Schema
// Using Prisma ORM

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

// ═══════════════════════════════════════════════════════════════
// USER MODEL
// ═══════════════════════════════════════════════════════════════
model User {
  id        String   @id @default(uuid())
  discordId String   @unique
  username  String
  avatar    String?
  email     String?
  isAdmin   Boolean  @default(false)
  isOwner   Boolean  @default(false)
  isBanned  Boolean  @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  key                 Key?
  checkpointProgress  CheckpointProgress[]
  auditLogs           AuditLog[]
  sessions            Session[]
}

// ═══════════════════════════════════════════════════════════════
// KEY MODEL
// ═══════════════════════════════════════════════════════════════
model Key {
  id        String    @id @default(uuid())
  key       String    @unique
  userId    String    @unique
  hwidHash  String?
  isActive  Boolean   @default(true)
  expiresAt DateTime?
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt

  // HWID reset tracking (2 resets per 12 hours, 30 min cooldown)
  hwidResetCount    Int       @default(0)
  hwidResetWindowStart DateTime? // When the 12-hour window started
  lastHwidReset     DateTime?   // Last reset time (for 30 min cooldown)

  // Executor/Device info
  lastExecutor      String?   // Name of last executor used
  lastPlaceId       BigInt?   // Last game PlaceId
  lastUsedAt        DateTime? // Last time key was used
  
  // Key activation (after checkpoints)
  activatedAt       DateTime? // When key was activated after checkpoints

  // Relations
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([key])
  @@index([hwidHash])
}

// ═══════════════════════════════════════════════════════════════
// CHECKPOINT CONFIGURATION (Admin configurable)
// ═══════════════════════════════════════════════════════════════
model Checkpoint {
  id        String   @id @default(uuid())
  order     Int
  platform  String   // linkvertise, lootlabs, workink
  url       String
  name      String?
  enabled   Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  progress CheckpointProgress[]

  @@unique([order])
}

// ═══════════════════════════════════════════════════════════════
// CHECKPOINT PROGRESS (Per user)
// ═══════════════════════════════════════════════════════════════
model CheckpointProgress {
  id           String   @id @default(uuid())
  userId       String
  checkpointId String
  completedAt  DateTime @default(now())
  token        String?  // Validation token from platform

  // Relations
  user       User       @relation(fields: [userId], references: [id], onDelete: Cascade)
  checkpoint Checkpoint @relation(fields: [checkpointId], references: [id], onDelete: Cascade)

  @@unique([userId, checkpointId])
}

// ═══════════════════════════════════════════════════════════════
// GAME SCRIPTS
// ═══════════════════════════════════════════════════════════════
model GameScript {
  id        String   @id @default(uuid())
  name      String
  placeId   BigInt
  gameId    BigInt?
  content   String   // Lua script content
  enabled   Boolean  @default(true)
  paused    Boolean  @default(false) // Temporarily paused (different from disabled)
  version   String   @default("1.0.0")
  iconUrl   String?  // Roblox game icon URL
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Per-game maintenance
  maintenance        Boolean  @default(false)
  maintenanceMessage String?

  @@unique([placeId])
  @@index([placeId])
}

// ═══════════════════════════════════════════════════════════════
// USER SESSIONS
// ═══════════════════════════════════════════════════════════════
model Session {
  id        String   @id @default(uuid())
  userId    String
  token     String   @unique
  expiresAt DateTime
  createdAt DateTime @default(now())
  ipAddress String?
  userAgent String?

  // Relations
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([token])
  @@index([userId])
}

// ═══════════════════════════════════════════════════════════════
// SCRIPT TOKENS (Temporary tokens for script download)
// ═══════════════════════════════════════════════════════════════
model ScriptToken {
  id        String   @id @default(uuid())
  token     String   @unique
  keyId     String
  placeId   BigInt
  expiresAt DateTime
  used      Boolean  @default(false)
  createdAt DateTime @default(now())

  @@index([token])
}

// ═══════════════════════════════════════════════════════════════
// AUDIT LOGS
// ═══════════════════════════════════════════════════════════════
model AuditLog {
  id        String   @id @default(uuid())
  userId    String?
  event     String
  details   String?  // JSON string
  ipAddress String?
  userAgent String?
  success   Boolean  @default(true)
  createdAt DateTime @default(now())

  // Relations
  user User? @relation(fields: [userId], references: [id], onDelete: SetNull)

  @@index([event])
  @@index([userId])
  @@index([createdAt])
}

// ═══════════════════════════════════════════════════════════════
// SYSTEM SETTINGS
// ═══════════════════════════════════════════════════════════════
model SystemSettings {
  id                    String  @id @default("default")
  hubName               String  @default("Wisper Hub")
  hubDescription        String?
  checkpointsRequired   Int     @default(0)
  maxHwidResets         Int     @default(3)
  keyExpirationDays     Int?    // null = never expires
  keyActivationHours    Int     @default(6) // How long key stays active after checkpoints (hours)
  maintenanceMode       Boolean @default(false)
  maintenanceMessage    String?
  loaderVersion         String  @default("1.0.0")
}
